<div id="messages" class="container messages">
</div>

<script id="messageTemplate" type="text/x-handlebars-template">
\{{#each this}}
<div class="panel panel-default message-container">
<div class="panel-body message-content">
    <p><div><b>Title:</b> \{{name}}</div></p>
    <p><div><b>Author:</b> \{{author}}</div></p>
    <div><i>\{{message}}</i> \{{emoji}}</div>
<button id="\{{ messageId }}" class="btn btn-default like-button">üëç \{{likes}}</button>
</div>
</div>
\{{/each}}
</script>

<div class="formContainer">
    <form autocomplete="off" class="form-horizontal messageContainer" role="form"
            action="/message" method="POST">
        <div class="form-group">
            <label for="fieldName" class="col-sm-2 control-label">Book Title:</label>
            <div class="col-sm-4">
                <input type="text" class="form-control"
                id="fieldName" name="name">
            </div>
        </div>
        <div class="form-group">
            <label for="fieldAuthor" class="col-sm-2 control-label">Author:</label>
            <div class="col-sm-4">
                <input type="text" class="form-control"
                id="fieldAuthor" name="author">
            </div>
        </div>
        <div class="form-group">
            <label for="fieldEmail" class="col-sm-2 control-label">Review:</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" required
                    id="fieldMessage" name="message">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                <button type="submit" class="btn btn-default">Recommend Book</button>
            </div>
        </div>
    </form>
</div>
<script src="/js/getMessages.js"></script>
<script src="/js/ajax-submit.js">
</script>
